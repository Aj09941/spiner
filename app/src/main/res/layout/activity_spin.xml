<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
 <View

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/draw"
        android:visibility="visible"

        />

    <Button

        android:id="@+id/button"
        android:layout_width="250px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:textSize="24dp"
        android:background="#FFFFA600"
        android:layout_marginBottom="120dp"
        android:text="spin" />



    <ImageView

        android:id="@+id/imageView"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:paddingTop="10dp"
        app:srcCompat="@drawable/spins"
        android:layout_gravity="center"
        android:layout_marginTop="100px"

        />


    <TextView
        android:id="@+id/textView"
        android:textColor="#000"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="305dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textV"
        android:textColor="#000"
        android:textSize="16dp"
        android:text="mBTC :"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/textView3"
        android:textColor="#000"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:layout_marginLeft="70dp"

        />

    <TextView
        android:id="@+id/te"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textV"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textV"
        android:layout_marginBottom="69dp"
        android:text="mBTC :" />

    <TextView
        android:id="@+id/txtBtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_alignBottom="@+id/te"
        android:layout_toEndOf="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:text=""

        />
   <com.google.android.gms.ads.AdView
       xmlns:ads="http://schemas.android.com/apk/res-auto"
       android:id="@+id/adView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
       ads:adSize="BANNER"
       ads:adUnitId="ca-app-pub-7584874423919070/1337376528">
   </com.google.android.gms.ads.AdView>

</RelativeLayout>
